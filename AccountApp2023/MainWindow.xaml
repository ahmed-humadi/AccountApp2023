            <Menu x:Name="SideMenu" Grid.Column="0" FontSize="16" >
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>
                <MenuItem x:Name="SideMenuItem1" Style="{StaticResource MenuItemStyle}" Margin="0,40,0,0">
                    <MenuItem.Header>
                        <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                            <TextBlock TextAlignment="Center" 
                                       Text="  &#xE1DA; " 
                                       FontFamily="Segoe MDL2 Assets"/>
                            <TextBlock TextAlignment="Center" 
                                       Text="مشتريات"/>
                        </StackPanel>
                    </MenuItem.Header>
                    <MenuItem x:Name="SideMenu_MenuItem_1010_Display"
                              Click="SideMenuItem_Click">
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock TextAlignment="Center" 
                                       Text="&#xE1DA; " 
                                       FontFamily="Segoe MDL2 Assets"/>
                                <TextBlock TextAlignment="Center" 
                                       Text="انشاء نمط فاتورة"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
